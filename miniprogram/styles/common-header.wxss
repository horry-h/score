/* 通用头部样式 - common-header.wxss */

/* 统一头部样式 */
.common-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 24rpx 40rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 50%, #05a04d 100%);
  color: white;
  width: 100%;
  box-sizing: border-box;
  /* 为小程序胶囊按钮预留空间 */
  padding-top: calc(60rpx + env(safe-area-inset-top));
  padding-right: calc(24rpx + 200rpx);
  position: relative;
  overflow: hidden;
}

/* 头部装饰效果 */
.common-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* 头部左侧按钮 */
.common-header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 1;
}

.common-header-left:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.common-header-left .back-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.common-header-left .back-text {
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 头部标题 */
.common-header-title {
  font-size: 40rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  letter-spacing: 1rpx;
}

/* 头部右侧占位 */
.common-header-right {
  width: 80rpx;
  position: relative;
  z-index: 1;
}

