/* join-room.wxss */
@import '../../styles/common-header.wxss';

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.header-right {
  width: 80rpx; /* 占位，保持标题居中 */
}

.qr-section {
  margin-bottom: 40rpx;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.qr-code {
  width: 100%;
  max-width: 400rpx;
  height: 400rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
  color: #666;
  font-size: 28rpx;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.input-section {
  margin-bottom: 40rpx;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-group label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.input-group input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-group input:focus {
  border-color: #07c160;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.15);
  outline: none;
}

.input-group input::placeholder {
  color: #999;
  font-size: 28rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
