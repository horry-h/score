/* join-room.wxss */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 24rpx;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.header-left:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.back-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.back-text {
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 80rpx; /* 占位，保持标题居中 */
}

.qr-section {
  margin-bottom: 40rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
  color: #666;
  font-size: 28rpx;
  gap: 20rpx;
}

.input-section {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-group label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.input-group input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-group input:focus {
  border-color: #07c160;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.15);
  outline: none;
}

.input-group input::placeholder {
  color: #999;
  font-size: 28rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
