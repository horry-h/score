/* join-room.wxss */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.qr-section {
  margin-bottom: 40rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
  color: #666;
  font-size: 28rpx;
  gap: 20rpx;
}

.input-section {
  margin-bottom: 40rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
