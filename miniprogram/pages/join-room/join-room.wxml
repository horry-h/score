<!--join-room.wxml-->
<view class="container">
  <view class="header">
    <view class="header-left" bindtap="goToHome">
      <text class="back-icon">🏠</text>
      <text class="back-text">返回主页</text>
    </view>
    <text class="title">扫码加入</text>
    <view class="header-right"></view>
  </view>

  <view class="qr-section">
    <view class="qr-code">
      <text class="icon">📱</text>
      <text>扫描二维码加入房间</text>
    </view>
  </view>

  <view class="input-section">
    <view class="input-group">
      <label>或输入房间号</label>
      <input type="number" placeholder="请输入房间号" value="{{roomCode}}" bindinput="onRoomCodeInput" />
    </view>
    
    <button class="btn" bindtap="joinRoom">
      <text class="icon">🚪</text>
      <text>加入房间</text>
    </button>
  </view>
</view>
