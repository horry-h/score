/**index.wxss**/
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #07c160, #06ad56);
  padding: 40rpx 40rpx 30rpx;
  color: white;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 40rpx;
  font-weight: 600;
}

.header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

/* 最近房间区域 */
.recent-section {
  padding: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  color: #07c160;
}

.section-text {
  color: #333;
}

.recent-room-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #07c160;
  background: linear-gradient(135deg, #f0f9f4, #ffffff);
  position: relative;
  overflow: hidden;
}

.recent-room-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #07c160, #06ad56);
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-id {
  font-size: 36rpx;
  font-weight: 600;
  color: #07c160;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-active {
  background: #e8f5e8;
  color: #07c160;
}

.room-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.room-time, .room-score {
  display: flex;
  align-items: center;
}

.time-icon, .score-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.time-text {
  color: #666;
  font-size: 28rpx;
}

.score-text {
  font-weight: 600;
  font-size: 28rpx;
}

.score-text.positive {
  color: #07c160;
}

.score-text.negative {
  color: #ff4757;
}

.room-stats {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 24rpx;
  margin: 20rpx 0;
}

.stats-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.stats-separator {
  margin: 0 16rpx;
  color: #ddd;
}

.continue-hint {
  text-align: center;
  margin-top: 20rpx;
  color: #07c160;
  font-size: 28rpx;
  font-weight: 500;
}

.hint-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.history-btn-wrapper {
  text-align: center;
  margin: 20rpx 0;
}

/* 个人信息浮窗样式 */
.profile-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.profile-modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.profile-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.profile-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.profile-modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
}

.close-icon {
  font-size: 40rpx;
  color: #666;
  line-height: 1;
}

.profile-modal-body {
  padding: 40rpx;
}

.profile-modal .form-group {
  margin-bottom: 40rpx;
}

.profile-modal .form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.profile-modal .form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.profile-modal .form-input:focus {
  border-color: #07c160;
  background: white;
}

.avatar-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e0e0e0;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.2;
}

.profile-modal .wechat-auth-btn {
  flex: 1;
  background: #07c160;
  color: white;
  border: none;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.profile-modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.profile-modal .cancel-btn {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border: none;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-modal .save-btn {
  flex: 1;
  background: #07c160;
  color: white;
  border: none;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.history-btn {
  background: #f0f0f0;
  color: #333;
  border: none;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background: #f0f0f0;
  margin: 40rpx 0;
}

/* 快速操作区域 */
.quick-actions {
  padding: 0 40rpx 40rpx;
}

.action-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-btn {
  border: none;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 120rpx;
}

.action-btn.primary {
  background: #07c160;
  color: white;
}

.action-btn.secondary {
  background: #f0f0f0;
  color: #333;
}

.action-btn .btn-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-btn .btn-text {
  font-size: 28rpx;
}

/* 登录浮窗样式 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.login-modal-content {
  background: white;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  position: relative;
}

.login-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.login-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.login-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.login-form {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.form-input:focus {
  border-color: #07c160;
  background: white;
}

.avatar-upload {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
}

.avatar-upload-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  width: auto;
  height: auto;
  line-height: normal;
  font-size: inherit;
}

.avatar-upload-btn::after {
  border: none;
}

.avatar-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.upload-hint {
  font-size: 28rpx;
  color: #666;
}

.login-actions {
  padding: 0 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.login-btn {
  border: none;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.wechat {
  background: #07c160;
  color: white;
}

.login-btn.save {
  background: #f0f0f0;
  color: #333;
}

.login-btn .btn-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}
