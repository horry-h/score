/**index.wxss**/
@import '../../styles/common-header.wxss';

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
}

/* 首页专用头部样式 */
.index-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 50%, #05a04d 100%);
  color: white;
  width: 100%;
  box-sizing: border-box;
  /* 为小程序胶囊按钮预留空间 */
  padding: calc(40rpx + env(safe-area-inset-top)) calc(24rpx + 200rpx) 24rpx calc(24rpx + 40rpx);
  position: relative;
  overflow: hidden;
}

.index-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* 左侧头像区域 */
.header-avatar-section {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
  cursor: pointer;
  transition: all 0.3s ease;
  /* 确保左侧区域有固定宽度，与右侧对称 */
  min-width: 120rpx;
  justify-content: flex-start;
}

.header-avatar-section:active {
  transform: scale(0.95);
}

.header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.header-avatar::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, rgba(255,255,255,0.3), rgba(255,255,255,0.1));
  z-index: -1;
}

/* 右侧占位区域 */
.header-right-placeholder {
  min-width: 120rpx;
  position: relative;
  z-index: 1;
}

/* 中间标题 - 绝对居中 */
.app-title {
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
  /* 绝对居中定位 */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
  /* 防止文字换行 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 确保标题不被左右元素遮挡 */
  max-width: calc(100% - 200rpx);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

/* 最近房间区域 */
.recent-section {
  padding: 20rpx 16rpx 16rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 没有房间时的紧凑样式 */
.recent-section.no-room {
  padding: 12rpx 16rpx 8rpx;
}

.recent-section.no-room .section-title {
  margin-bottom: 8rpx;
  font-size: 32rpx; /* 稍微减小标题字体 */
}

.recent-section.no-room .section-icon {
  font-size: 36rpx; /* 稍微减小图标字体 */
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  color: #2c3e50;
  font-size: 36rpx;
  font-weight: 700;
}

.section-icon {
