  font-size: 42rpx;
  margin-bottom: 8rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.1));
}

.action-btn .btn-text {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
