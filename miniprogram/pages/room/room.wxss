/* room.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 24rpx 30rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 50%, #05a04d 100%);
  color: white;
  margin: -40rpx -40rpx 24rpx -40rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 2;
}

.header-left:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.back-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.back-text {
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  letter-spacing: 1rpx;
  position: relative;
  z-index: 2;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 80rpx; /* 占位，保持标题居中 */
  position: relative;
  z-index: 2;
}

.players-section {
  margin-bottom: 24rpx;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.players-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.player-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  border: 2rpx solid transparent;
}

.player-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.player-card.current {
  border-color: #07c160;
  background: linear-gradient(135deg, #f0f9f4 0%, #e8f5e8 100%);
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.player-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.player-score {
  font-size: 32rpx;
  font-weight: 600;
  color: #07c160;
  margin-bottom: 8rpx;
}

.player-score.score-negative {
  color: #ff4757;
}

.player-hint {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.transfer-section {
  margin-bottom: 24rpx;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.transfer-hint {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  margin: 20rpx 0;
  color: #666;
  font-size: 26rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.transfer-actions {
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.transfer-actions .btn {
  width: auto;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.history-section {
  margin-bottom: 40rpx;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.transfer-desc {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.transfer-time {
  font-size: 24rpx;
  color: #666;
}

.transfer-amount {
  font-size: 32rpx;
  font-weight: 600;
}

.transfer-amount.positive {
  color: #07c160;
}

.transfer-amount.negative {
  color: #ff4757;
}

.empty-state {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 60rpx 24rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.transfer-info {
  flex: 1;
}

.transfer-desc {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.transfer-time {
  color: #666;
  font-size: 24rpx;
}

.transfer-amount {
  font-weight: 600;
  font-size: 32rpx;
}

.transfer-amount.positive {
  color: #07c160;
}

.transfer-amount.negative {
  color: #ff4757;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-buttons .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.close-btn {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 40rpx;
  color: #666;
  cursor: pointer;
}

.share-room-info {
  margin: 40rpx 0;
}

.share-room-info .room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.share-room-info .room-id {
  font-size: 36rpx;
  font-weight: 600;
  color: #07c160;
}

.share-room-info .room-stats {
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.qr-code-section {
  margin: 40rpx 0;
}

.qr-code-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.qr-code-header .icon {
  margin-right: 10rpx;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.qr-code-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.qr-code-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.qr-code-hint {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.qr-code-placeholder {
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  color: #666;
  font-size: 28rpx;
  gap: 20rpx;
  border: 2rpx dashed #ccc;
}

.share-actions {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
}

.share-actions .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.modal-footer {
  text-align: center;
  margin-top: 30rpx;
}

.modal-footer .btn {
  width: auto;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
}
