/* room.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

/* 返回主页按钮 */
.back-button {
  position: fixed;
  top: 60rpx;
  left: 24rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(7, 193, 96, 0.2);
  transition: all 0.3s ease;
}

.back-button:active {
  background: rgba(255, 255, 255, 1);
  transform: scale(0.95);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.back-icon {
  font-size: 28rpx;
  color: #07c160;
}

.back-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #07c160;
  letter-spacing: 1rpx;
}

/* 房间标题区域 */
.room-header {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 50%, #05a04d 100%);
  color: white;
  padding: 100rpx 0 50rpx;
  margin: 0 -40rpx 24rpx -40rpx;
  position: relative;
  overflow: hidden;
  width: calc(100% + 80rpx);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.room-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

.room-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 20rpx;
  background: linear-gradient(180deg, rgba(7, 193, 96, 0.1) 0%, transparent 100%);
}

.room-title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  position: relative;
  z-index: 2;
  text-align: center;
}

.room-title-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.room-icon {
  font-size: 64rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
  animation: pulse 2s ease-in-out infinite;
}

.room-title {
  font-size: 48rpx;
  font-weight: 800;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  letter-spacing: 2rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f0f9f4 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.room-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #06ad56 0%, #05a04d 100%);
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 0 12rpx rgba(255, 255, 255, 0.8);
  animation: blink 2s ease-in-out infinite;
}

.status-text {
  font-size: 26rpx;
  font-weight: 600;
  opacity: 0.95;
  letter-spacing: 1rpx;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.players-section {
  margin-bottom: 24rpx;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.players-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.player-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  border: 2rpx solid transparent;
  position: relative;
  overflow: hidden;
}

.player-item:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

.player-item.current-player {
  border-color: #07c160;
  background: linear-gradient(135deg, #f0f9f4 0%, #e8f5e8 100%);
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.15);
}

.player-item.current-player::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #07c160 0%, #06ad56 100%);
}

.player-avatar-container {
  position: relative;
  flex-shrink: 0;
}

.player-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 3rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.player-item.current-player .player-avatar {
  border-color: #07c160;
  box-shadow: 0 0 0 3rpx rgba(7, 193, 96, 0.2);
}

.default-avatar {
  background: linear-gradient(135deg, #e0e0e0 0%, #f0f0f0 100%);
}

.avatar-icon {
  font-size: 40rpx;
  color: #999;
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.player-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.player-score {
  font-size: 36rpx;
  font-weight: 700;
  color: #07c160;
  margin-bottom: 8rpx;
}

.player-score.score-negative {
  color: #ff4757;
}

.player-hint {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.transfer-section {
  margin-bottom: 8rpx;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.transfer-hint {
  background: #f8f9fa;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  margin: 8rpx 0;
  color: #666;
  font-size: 26rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  width: 100%;
  box-sizing: border-box;
