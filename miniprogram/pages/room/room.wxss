/* room.wxss */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.players-section {
  margin-bottom: 40rpx;
}

.player-hint {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.transfer-section {
  margin-bottom: 40rpx;
}

.transfer-hint {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
  margin: 30rpx 0;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.transfer-actions {
  text-align: center;
}

.transfer-actions .btn {
  width: auto;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.history-section {
  margin-bottom: 40rpx;
}

.transfer-info {
  flex: 1;
}

.transfer-desc {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.transfer-time {
  color: #666;
  font-size: 24rpx;
}

.transfer-amount {
  font-weight: 600;
  font-size: 32rpx;
}

.transfer-amount.positive {
  color: #07c160;
}

.transfer-amount.negative {
  color: #ff4757;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
}

.action-buttons .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.close-btn {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 40rpx;
  color: #666;
  cursor: pointer;
}

.share-room-info {
  margin: 40rpx 0;
}

.share-room-info .room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.share-room-info .room-id {
  font-size: 36rpx;
  font-weight: 600;
  color: #07c160;
}

.share-room-info .room-stats {
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.qr-code {
  width: 300rpx;
  height: 300rpx;
  background: #f0f0f0;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto;
  color: #666;
  font-size: 28rpx;
  gap: 20rpx;
}

.share-actions {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0;
}

.share-actions .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.modal-footer {
  text-align: center;
  margin-top: 30rpx;
}

.modal-footer .btn {
  width: auto;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
}
