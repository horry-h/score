<!--create-room.wxml-->
<view class="container">
  <view class="header">
    <view class="header-left" bindtap="goToHome">
      <text class="back-icon">🏠</text>
      <text class="back-text">返回主页</text>
    </view>
    <text class="title">创建房间</text>
    <view class="header-right"></view>
  </view>

  <view class="content-section">
    <view class="card">
      <view class="section-title">
        <text class="icon">🏠</text>
        <text>创建新房间</text>
      </view>
      
      <view class="room-info">
        <view class="info-item">
          <text class="icon">👥</text>
          <text>支持多人加入，无人数限制</text>
        </view>
        <view class="info-item">
          <text class="icon">🎯</text>
          <text>自动生成房间号，方便分享</text>
        </view>
        <view class="info-item">
          <text class="icon">💰</text>
          <text>支持分数转移和房间结算</text>
        </view>
      </view>
      
      <button class="btn" bindtap="createRoom" disabled="{{loading}}">
        <text class="icon">➕</text>
        <text>{{loading ? '创建中...' : '立即创建房间'}}</text>
      </button>
    </view>
  </view>
</view>
