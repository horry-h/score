/* create-room.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 24rpx;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.header-left:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.back-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.back-text {
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 80rpx; /* 占位，保持标题居中 */
}

.content-section {
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.info-tip {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
  margin: 30rpx 0;
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-group label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.input-group input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-group input:focus {
  border-color: #07c160;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.15);
  outline: none;
}

.input-group input::placeholder {
  color: #999;
  font-size: 28rpx;
}

.room-info {
  margin: 30rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #666;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .icon {
  font-size: 32rpx;
  width: 40rpx;
  text-align: center;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn:disabled {
  opacity: 0.6;
  background: #ccc !important;
}
