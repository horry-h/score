/* room-detail.wxss */
@import '../../styles/common-header.wxss';

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.header-right {
  width: 80rpx; /* 占位，保持标题居中 */
}

.content-section {
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.room-info {
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-id {
  font-size: 36rpx;
  font-weight: 600;
  color: #07c160;
}

.room-meta {
  color: #666;
  font-size: 24rpx;
}

.room-time {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.room-stats {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.separator {
  margin: 0 10rpx;
}

.settlement-section {
  margin-bottom: 40rpx;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.player-score-desc {
  font-size: 24rpx;
  color: #666;
}

.transfer-desc {
  font-size: 28rpx;
}

.history-section {
  margin-bottom: 40rpx;
}

.transfer-info {
  flex: 1;
}

.transfer-desc {
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.transfer-time {
  color: #666;
  font-size: 24rpx;
}

.transfer-amount {
  font-weight: 600;
  font-size: 32rpx;
}

.transfer-amount.positive {
  color: #07c160;
}

.transfer-amount.negative {
  color: #ff4757;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
