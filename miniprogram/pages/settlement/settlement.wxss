/* settlement.wxss */
@import '../../styles/common-header.wxss';

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.content-section {
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.settlement-section {
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.player-score-desc {
  font-size: 24rpx;
  color: #666;
}

.transfer-desc {
  font-size: 28rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
