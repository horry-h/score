/* settlement.wxss */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.settlement-section {
  margin-bottom: 40rpx;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.player-score-desc {
  font-size: 24rpx;
  color: #666;
}

.transfer-desc {
  font-size: 28rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
