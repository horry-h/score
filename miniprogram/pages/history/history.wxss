/* history.wxss */
@import '../../styles/common-header.wxss';

.container {
  height: 100vh;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9f4 100%);
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.content-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 0;
}

.info-tip {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
  margin: 40rpx 0 20rpx 0;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  width: 100%;
  box-sizing: border-box;
  flex-shrink: 0;
}

.rooms-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.rooms-scroll {
  flex: 1;
  height: 0;
  min-height: 0;
}

.room-card {
  cursor: pointer;
  transition: all 0.3s ease;
}

.room-card:active {
  transform: scale(0.98);
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-id {
  font-size: 36rpx;
  font-weight: 600;
  color: #07c160;
}

.room-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.room-time {
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.room-score {
  font-weight: 600;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.room-score.positive {
  color: #07c160;
}

.room-score.negative {
  color: #ff4757;
}

.room-stats {
  color: #666;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.separator {
  margin: 0 10rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #07c160;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
