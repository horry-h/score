/* history.wxss */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.info-tip {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 16rpx;
  margin: 40rpx 0;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.room-card {
  cursor: pointer;
  transition: all 0.3s ease;
}

.room-card:active {
  transform: scale(0.98);
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-id {
  font-size: 36rpx;
  font-weight: 600;
  color: #07c160;
}

.room-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.room-time {
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.room-score {
  font-weight: 600;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.room-score.positive {
  color: #07c160;
}

.room-score.negative {
  color: #ff4757;
}

.room-stats {
  color: #666;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.separator {
  margin: 0 10rpx;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.load-more {
  text-align: center;
  margin: 40rpx 0;
}

.load-more .btn {
  width: auto;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
