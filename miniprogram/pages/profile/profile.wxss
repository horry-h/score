/* profile.wxss */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.avatar-section {
  text-align: center;
  margin: 40rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  overflow: hidden;
}

.avatar-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  overflow: hidden;
}

.avatar-btn::after {
  border: none;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
}

.avatar-hint {
  color: #666;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.action-buttons {
  margin-top: 60rpx;
}

.action-buttons .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
