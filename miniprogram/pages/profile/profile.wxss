/* profile.wxss */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: white;
  margin: -40rpx -40rpx 40rpx -40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
}

.avatar-section {
  text-align: center;
  margin: 40rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  overflow: hidden;
}

.avatar-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  overflow: hidden;
}

.avatar-btn::after {
  border: none;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
}

.avatar-hint {
  color: #666;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.action-buttons {
  margin-top: 60rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-group label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.input-group input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #fff;
  transition: all 0.3s ease;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-group input:focus {
  border-color: #07c160;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.15);
  outline: none;
}

.input-group input::placeholder {
  color: #999;
  font-size: 28rpx;
}

.action-buttons .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
